<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.tracking.MapsTrackFragment">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_margin="@dimen/app_marging_defult">
        <TextView
            android:id="@+id/tvTimer"
            android:layout_toStartOf="@+id/runControls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/app_marging_defult"
            android:background="@drawable/ic_defult_button_bg"
            android:text="00:00:00"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:gravity="center"/>
        <LinearLayout
            android:id="@+id/runControls"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">
            <ImageButton
                android:id="@+id/start"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:background="@drawable/ic_defult_button_bg"
                android:layout_marginEnd="@dimen/app_marging_defult"
                android:src="@drawable/ic_run"
                android:tint="@color/colorPrimary"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/pause"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:background="@drawable/ic_defult_button_bg"
                android:layout_marginEnd="@dimen/app_marging_defult"
                android:visibility="gone"
                android:src="@drawable/ic_pause"
                android:tint="@color/colorPrimary"/>
            <ImageButton
                android:id="@+id/stop"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:background="@drawable/ic_defult_button_bg"
                android:visibility="gone"
                android:src="@drawable/ic_stop"
                android:tint="@color/colorPrimary"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>