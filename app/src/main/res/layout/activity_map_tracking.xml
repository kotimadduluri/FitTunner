<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    tools:context=".view.tracking.MapTrackingActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/runControlls"/>

    <RelativeLayout
        android:id="@+id/runControlls"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:id="@+id/runLeftControls"
            android:layout_toStartOf="@+id/tvTimerHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/start"
                android:src="@drawable/ic_run"
                style="@style/floatingActionButtonStyle"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/save"
                android:src="@drawable/ic_save"
                style="@style/floatingActionButtonStyle"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tvTimerHolder"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/ic_defult_button_rounded_primary_bg"
            android:layout_centerInParent="true"
            android:elevation="@dimen/dp_10"
            android:onClick="onClick">
            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="START"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/runControllButtonLable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text=" Tap to START"
                android:layout_marginBottom="@dimen/dp_20"
                android:textSize="@dimen/sp_10"
                android:textColor="#767171"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/runControls"
            android:layout_toEndOf="@+id/tvTimerHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/pause"
                android:src="@drawable/ic_pause"
                style="@style/floatingActionButtonStyle"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/cancel"
                android:src="@drawable/ic_close"
                style="@style/floatingActionButtonStyle"/>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>